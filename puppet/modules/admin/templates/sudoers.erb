# /etc/sudoers
#
# Do not edit this file
# It is managed centrally by Puppet
#

# Allow root to use the X display
Defaults:ALL env_reset
Defaults:ALL env_keep += DISPLAY
Defaults:ALL env_keep += XAUTHORITY

# Host alias specification
# User alias specification
User_Alias SYSOPS = david<%= scope.lookupvar("::vagrant_dev_vm") == 'true' ? ',vagrant' : '' %>

# Cmnd alias specification
Cmnd_Alias SHELLS = /bin/sh, /bin/csh, /bin/ksh, /bin/tcsh, /usr/kerberos/bin/rsh
Cmnd_Alias SU = /bin/su

# User privilege specification
root        ALL = (ALL) ALL
SYSOPS      ALL = (ALL) NOPASSWD: ALL
appuser     ALL = (ALL) NOPASSWD: ALL
